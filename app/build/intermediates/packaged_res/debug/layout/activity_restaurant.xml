<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F1E3"
    tools:context=".topCategories.Restaurant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fastfood1"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Our restaurants"
                android:textColor="#8AAC74"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="285dp"
                android:src="@drawable/restaurant" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="341dp"
                android:layout_height="65dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Sapori Interior and lighting design for fine Italian restaurant"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:src="@drawable/uk_res" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="341dp"
                android:layout_height="88dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Sapori Interior and lighting design for fine Italian restaurant"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>