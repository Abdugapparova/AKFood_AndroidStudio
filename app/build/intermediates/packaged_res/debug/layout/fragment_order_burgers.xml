<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4EBE8"
    tools:context=".orders.fragments.OrderBurgers">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderOnlineT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Order Online"
            android:textAlignment="center"
            android:textColor="#F6AE97"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yourOrder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Burgers"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b3"
                android:layout_width="48dp"
                android:layout_height="159dp"
                android:layout_marginTop="250dp"
                android:backgroundTint="#F6AE97"
                android:text=" "
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="318dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cheeseburger"
                        app:srcCompat="@drawable/cheeseburger"
                        android:layout_width="165dp"
                        android:layout_height="134dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cBurger"
                            android:layout_width="127dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Cheese Burger"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="127dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="1200  TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="169dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chickenBurger"
                        app:srcCompat="@drawable/burgerchicken"
                        android:layout_width="165dp"
                        android:layout_height="134dp"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/a"
                            android:layout_width="127dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Chicken Burger"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="1000 TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/beefBurger"
                        android:layout_width="165dp"
                        android:layout_height="138dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/burgermeet" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/beefB"
                            android:layout_width="127dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Beef Burger"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="127dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="1500 TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/b2"
                android:layout_width="48dp"
                android:layout_height="159dp"
                android:layout_marginTop="250dp"
                android:backgroundTint="#F6AE97"
                android:text=" "
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/my_button"
            android:text="ORDER"
            android:textColor="#FDFCFC"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>