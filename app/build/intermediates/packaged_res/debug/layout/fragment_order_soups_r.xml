<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EBE8"
    tools:context=".orders.fragmentsRes.OrderSoupsRes">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderOnlineT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Order in Restaurant"
            android:textAlignment="center"
            android:textColor="#F6AE97"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/soupsO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Soups"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                android:layout_width="55dp"
                android:layout_height="159dp"
                android:layout_marginTop="250dp"
                android:backgroundTint="#F6AE97"
                android:text=" "
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/appleSoup"
                        android:layout_width="149dp"
                        android:layout_height="156dp"
                        app:srcCompat="@drawable/applesoup" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cBurger"
                            android:layout_width="153dp"
                            android:layout_height="64dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Chilled Apple Ginger Soup"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="153dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="3500  TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/squashSoup"
                        android:layout_width="149dp"
                        android:layout_height="156dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/squashsoup" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/a"
                            android:layout_width="153dp"
                            android:layout_height="86dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Hearty Grains and Butternut Squash Soup"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="153dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="4000 TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cornSoup"
                        android:layout_width="149dp"
                        android:layout_height="156dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/cornsoup" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/beefB"
                            android:layout_width="153dp"
                            android:layout_height="86dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Roasted Jalapeno and Corn Chowder"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="153dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="5500 TG"
                            android:textAlignment="center"
                            android:textColor="#0B0A0A"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/b5"
                android:layout_width="48dp"
                android:layout_height="159dp"
                android:layout_marginTop="250dp"
                android:background="#F6AE97"
                android:text="  "
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/my_button"
            android:text="ORDER"
            android:textColor="#FDFCFC"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>