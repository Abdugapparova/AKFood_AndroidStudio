<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4EBE8"
    tools:context=".orders.fragmentsRes.OrderDessertsRes">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderOnlineT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Order in Restaurant"
            android:textAlignment="center"
            android:textColor="#F6AE97"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desertO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Desserts"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="24sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b6"
            android:layout_width="55dp"
            android:layout_height="159dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="#F6AE97"
            android:text=" "
            tools:ignore="SpeakableTextPresentCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tiramisu"
                            android:layout_width="160dp"
                            android:layout_height="146dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/tiramisu" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/a"
                                android:layout_width="153dp"
                                android:layout_height="51dp"
                                android:layout_marginTop="30dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Espresso Tiramisu"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="153dp"
                                android:layout_height="38dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="6600 TG"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="162dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cCake"
                            android:layout_width="160dp"
                            android:layout_height="156dp"
                            app:srcCompat="@drawable/cheesecake" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cBurger"
                                android:layout_width="153dp"
                                android:layout_height="38dp"
                                android:layout_marginTop="50dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Cheese Cake"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView36"
                                android:layout_width="153dp"
                                android:layout_height="38dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="10000  TG"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/creme"
                            android:layout_width="160dp"
                            android:layout_height="156dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/cremebrulee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/beefB"
                                android:layout_width="153dp"
                                android:layout_height="54dp"
                                android:layout_marginTop="30dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Classic Creme Brulee"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="153dp"
                                android:layout_height="38dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="2500 TG"
                                android:textAlignment="center"
                                android:textColor="#0B0A0A"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/my_button"
            android:text="ORDER"
            android:textColor="#FDFCFC"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>