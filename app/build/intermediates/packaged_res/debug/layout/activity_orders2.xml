<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EBE8"
    tools:context=".orders.Orders">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="826dp"
        android:background="#F4EBE8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="35dp"
                android:drawableLeft="@drawable/ic_baseline_shopping_basket_24"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Order"
                android:textAlignment="center"
                android:textColor="#F6AE97"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/orderOnline"
                android:layout_width="345dp"
                android:layout_height="69dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#052D4C"
                android:text="Order online"
                android:textColor="#FFFBFB"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"/>

            <Button
                android:id="@+id/orderRes"
                android:layout_width="346dp"
                android:layout_height="73dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="#FF2F7FBF"
                android:text="Order in restaurant"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="626dp"
                android:layout_marginTop="90dp"
                app:srcCompat="@drawable/meet" />
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>