<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/lin_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/akfoodHome"
                android:layout_width="347dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="#052D4C"
                android:fontFamily="@font/euphoria_script"
                android:text="AKFood"
                android:textAlignment="center"
                android:textColor="#EFEFF3"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:textAlignment="center" />


            <Button
                android:id="@+id/menu"
                android:layout_width="349dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FF2F7FBF"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Menu"
                android:textColor="#FAF7F7"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/akfoodHome" />

            <TextView
                android:id="@+id/topC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Top categories"
                android:textColor="#070707"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="157dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/fastFood"
                            android:layout_width="136dp"
                            android:layout_height="122dp"
                            android:layout_marginLeft="23dp"
                            app:srcCompat="@drawable/fastfood" />

                        <TextView
                            android:id="@+id/fastfood"
                            android:layout_width="122dp"
                            android:layout_height="122dp"
                            android:layout_marginLeft="28dp"
                            android:background="#88090909"
                            android:clickable="true"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="                              Fast                           Food"
                            android:textAlignment="center"
                            android:textColor="#FBF9F9"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/desert"
                            android:layout_width="136dp"
                            android:layout_height="122dp"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/desert" />

                        <TextView
                            android:id="@+id/dessert"
                            android:layout_width="136dp"
                            android:layout_height="122dp"
                            android:background="#88090909"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="                                               Dessert"
                            android:textAlignment="center"
                            android:textColor="#FBF9F9"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:clickable="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/soups"
                            android:layout_width="135dp"
                            android:layout_height="122dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/soups" />

                        <TextView
                            android:id="@+id/soup"
                            android:layout_width="135dp"
                            android:layout_height="122dp"
                            android:layout_marginLeft="10dp"
                            android:background="#88090909"
                            android:clickable="true"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="                              Soups"
                            android:textAlignment="center"
                            android:textColor="#FBF9F9"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:orientation="vertical">

                <!--                    android:contentDescription="@string/todo" />-->

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="248dp"
                    app:srcCompat="@drawable/restaurant" />

                <TextView
                    android:id="@+id/res"
                    android:layout_width="169dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:minHeight="48dp"
                    android:text="Restaurant"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="262dp"
                    app:srcCompat="@drawable/cake" />

                <TextView
                    android:id="@+id/cake"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Chocolate Lava Cake"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Type of Foods"
                    android:textColor="#020202"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/seeAll2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/noodle"
                        android:layout_width="121dp"
                        android:layout_height="183dp"
                        android:layout_marginLeft="30dp"
                        app:srcCompat="@drawable/noodles"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/soupp"
                        android:layout_width="121dp"
                        android:layout_height="183dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/soup"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/burger"
                        android:layout_width="123dp"
                        android:layout_height="183dp"
                        android:layout_marginLeft="5dp"
                        app:srcCompat="@drawable/burger"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/pizza"
                        android:layout_width="149dp"
                        android:layout_height="188dp"
                        app:srcCompat="@drawable/pizza"
                        android:clickable="true"/>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>