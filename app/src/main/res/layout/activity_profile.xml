<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="549dp"
    android:layout_height="1128dp"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="583dp"
        android:layout_height="1176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="513dp"
            android:layout_height="924dp"
            app:srcCompat="@drawable/res1" />

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="527dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/euphoria_script"
                android:text="Welcome to AKFood!"
                android:textAlignment="center"
                android:textColor="#E9E8EC"
                android:textSize="50sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#052D4C"
                android:text="Log in"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="#FF2F7FBF"
                android:text="Register"
                android:textColor="#FFFEFE"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>